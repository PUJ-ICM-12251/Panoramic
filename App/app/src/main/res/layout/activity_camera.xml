<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".CameraActivity">


    <TextView
        android:id="@+id/cameratitletextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="140dp"
        android:text="@string/title_camera"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="41dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="286dp"
        android:layout_height="261dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="171dp"
        app:srcCompat="@drawable/user2" />

    <Button
        android:id="@+id/buttonCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginStart="15dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="#FF0000"
        android:onClick="startCamera"
        android:text="Abrir Camara"
        android:textSize="14sp"
        app:cornerRadius="50dp"
        app:icon="@drawable/ic_camera_01"
        app:iconSize="30dp" />

    <Button
        android:id="@+id/buttonGaleria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginStart="210dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="#FF0000"
        android:onClick="startGallery"
        android:text="Abrir GalerÃ­a"
        android:textSize="14sp"
        app:cornerRadius="40dp"
        app:icon="@drawable/ic_gallery_01"
        app:iconSize="30dp" />

</RelativeLayout>