<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:id="@+id/relative_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1B1B">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CameraActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="286dp"
            android:layout_height="261dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/user2"
            />
        <Button
            android:id="@+id/buttonCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF0000"
            android:onClick="startCamera"
            android:text="Abrir Camara"
            android:textSize="14sp"
            app:cornerRadius="50dp"
            app:icon="@drawable/ic_camera_01"
            android:layout_below="@id/imageView"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            app:iconSize="30dp" />

        <Button
            android:id="@+id/buttonGaleria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF0000"
            android:onClick="startGallery"
            android:text="Abrir GalerÃ­a"
            android:textSize="14sp"
            app:cornerRadius="40dp"
            app:icon="@drawable/ic_gallery_01"
            android:layout_below="@id/imageView"
            android:layout_marginStart="210dp"
            android:layout_marginTop="30dp"
            app:iconSize="30dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonCamera"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:text="Nombre" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="950px"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Ingrese el nuevo nombre"
            android:background="@color/light"
            android:padding="7dip"
            android:layout_below="@id/textView7"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextText"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:text="Correo" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="950px"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese el nuevo correo"
            android:background="@color/light"
            android:padding="7dip"
            android:layout_below="@id/textView8"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:inputType="textEmailAddress"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            app:cornerRadius="50dp"
            android:backgroundTint="#FF0000"
            android:layout_below="@id/editTextTextEmailAddress"
            android:layout_marginStart="212dp"
            android:layout_marginTop="10dp"
            android:text="Editar perfil" />
    </RelativeLayout>
</ScrollView>