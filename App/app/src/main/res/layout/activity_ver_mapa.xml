<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VerMapa"
        ></androidx.fragment.app.FragmentContainerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:background="@drawable/roundedbox">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/userDir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tu dirección:"
                android:textSize="20sp"
                android:layout_weight="0.5"
                android:textColor="@color/white"
                android:background="#F24B4B"
                ></TextView>
            <TextView
                android:id="@+id/miDir"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Dirección"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/border"
                android:textSize="20sp"
                android:layout_weight="0.3"
                ></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/address"
                android:hint="Ingrese un nombre"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:inputType="text"
                android:imeOptions="actionSend"/>
            <Button
                android:id="@+id/buscarDir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buscar"
                android:textColor="@color/white"
                android:backgroundTint="@color/Flaming_red"
                android:drawableLeft="@android:drawable/ic_menu_search"
                android:layout_weight="0.30"
                android:onClick="search"
                tools:ignore="OnClick"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <CheckBox
                android:id="@+id/btnAct"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Desactivar ubicación"
                android:textColor="@color/white"
                android:layout_weight="0.6"
                ></CheckBox>
            <Button
                android:id="@+id/btnCen"
                android:layout_weight="0.4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Centrar vista"
                android:textColor="@color/white"
                android:backgroundTint="@color/Flaming_red"
                ></Button>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
