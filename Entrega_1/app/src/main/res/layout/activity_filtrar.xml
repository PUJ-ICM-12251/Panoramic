<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Relative0"
    tools:context=".Filtrar">

    <RelativeLayout
        android:id="@+id/Relative1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#F24B4B"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="filtro"
            android:gravity=""
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Relative2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Relative1"
        android:background="#302C2C"
        android:orientation="vertical"
        android:paddingTop="10dp"
        >
        <TextView
            android:id="@+id/SeleccionCiudad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Seleccionar ciudad"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold"
            ></TextView>
        <RelativeLayout
            android:id="@+id/Relative3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp"
            android:paddingLeft="30dp"
            android:layout_below="@id/SeleccionCiudad"
            >
            <Button
                android:id="@+id/CiudadElegida"
                android:text="Ciudad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:backgroundTint="#F24B4B"
                android:textSize="20sp"
                ></Button>

            <Spinner
                android:id="@+id/ListaCiudades"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/CiudadElegida"
                tools:ignore="SpeakableTextPresentCheck"></Spinner>
        </RelativeLayout>
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tpEsta"
            android:layout_below="@id/Relative3"
            android:text="Tipo de establecimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            ></TextView>
        <RelativeLayout
            android:id="@+id/Relative4"
            android:layout_below="@id/tpEsta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:gravity="center|top"
            android:paddingTop="20dp"
            android:paddingLeft="10dp">
            <Button
                android:id="@+id/btnRestaurante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:backgroundTint="#F24B4B"
                android:text="Restaurante"
                />
            <Button
                android:id="@+id/btnEvento"
                android:layout_toRightOf="@id/btnRestaurante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:backgroundTint="#F24B4B"
                android:text="Evento"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif-medium"
                />
            <Button
                android:id="@+id/btnLocal"
                android:backgroundTint="#F24B4B"
                android:layout_toRightOf="@id/btnEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Local"
                android:fontFamily="sans-serif-medium"
                />
        </RelativeLayout>
        <TextView
            android:layout_margin="20dp"
            android:id="@+id/Precio"
            android:text = "Precio"
            android:layout_below="@id/Relative4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            ></TextView>
        <RelativeLayout
            android:id="@+id/Relative5"
            android:layout_below="@id/Precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >
            <RelativeLayout
                android:id="@+id/Relative6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/txtDesd"
                    android:text="Desde"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    ></TextView>

                <EditText
                    android:id="@+id/edDes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtDesd"
                    android:hint="Precio minimo"
                    android:textColor="#FFFFFF"
                    tools:ignore="TouchTargetSizeCheck"></EditText>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/Relative6"
                android:id="@+id/Relative7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/txthasta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Hasta"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="30sp"></TextView>

                <EditText
                    android:id="@+id/edHas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txthasta"
                    android:hint="Precio maximo"
                    android:textColor="#FFFFFF"
                    tools:ignore="TouchTargetSizeCheck"></EditText>
            </RelativeLayout>


        </RelativeLayout>
        <TextView
            android:layout_margin="20dp"
            android:id="@+id/Horario"
            android:text = "Horario"
            android:layout_below="@id/Relative5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            ></TextView>
        <RelativeLayout
            android:id="@+id/Relative8"
            android:layout_below="@id/Horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >
            <RelativeLayout
                android:id="@+id/Relative9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/txtAbre"
                    android:text="Abre"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    ></TextView>

                <EditText
                    android:id="@+id/edAbre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtAbre"
                    android:hint="Hora minima"
                    android:textColor="#FFFFFF"
                    tools:ignore="TouchTargetSizeCheck"></EditText>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/Relative9"
                android:id="@+id/Relative10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/txtCierra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Cierra"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="30sp"></TextView>

                <EditText
                    android:id="@+id/edCierra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtCierra"
                    android:hint="Precio maximo"
                    android:textColor="#FFFFFF"
                    tools:ignore="TouchTargetSizeCheck"></EditText>
            </RelativeLayout>
        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Relative8"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:backgroundTint="#F24B4B"
            android:text="Aplicar filtros"
            tools:ignore="TouchTargetSizeCheck"></Button>
    </RelativeLayout>


</RelativeLayout>